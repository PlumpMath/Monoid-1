<Page x:Class="MonoidAlpha.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MonoidAlpha"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1366"
      Title="Welcome">

	<Grid>
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
				<GradientStop Color="#FF7487C9" Offset="1"/>
				<GradientStop Color="#FFCCD6FB"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Frame x:Name="MainFrame" HorizontalAlignment="Center" Margin="0" Width="600" Background="{DynamicResource BackgroundLight}" Initialized="FrameInited">
			<Frame.Effect>
				<DropShadowEffect BlurRadius="20" Direction="0" ShadowDepth="0" Opacity="0.8"/>
			</Frame.Effect>

		</Frame>

	</Grid>
</Page>
